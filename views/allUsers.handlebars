<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/allUsers.css">
    <title>Document</title>
</head>
<body>

  <h1 data-id="{{id}}" >Admin</h1>
    <div class="container">
      <button id="DeleteUsersAfter" class=" btn btn-warning mt-2  rounded-0" onclick="deleteBefore()">Borrar usuarios no conectados hace 2 dias</button>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Id</th>
            <th>Perfil Picture</th>
            <th>Rol</th>
            <th>Modificar Rol</th>
            <th>Borrar</th>
          </tr>
        </thead>
        <tbody>
          {{#if filtroUser}}
           {{#each filtroUser}}
            <tr class="tr" >
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.age}}</td>
            <td>{{this.email}}</td>
            <td>{{this.id}}</td>
            <td>{{this.perfilPicture}}</td>
            <td>{{this.role}}</td>
            <td>
             <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-{{this.id}}">
  Cambiar rol
</button>

<!-- Modal -->
<div class="modal fade" id="modal-{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Cambiar rol</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <select class="form-select"  name="form-select" id="select-{{this.id}}">
        <option value="user">user</option>
        <option value="premium">premium</option>
       </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary"  data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="detectedRol('{{this.id}}')">Save changes</button>
      </div>
    </div>
  </div>
</div></td>
             

            <td> <button class="btn btn-danger" data-id="{{this.id}}" onclick="deleteItem('{{this.id}}')" >Eliminar</button>  </td>
            </tr>
            {{/each}}
            {{/if}}

        </tbody>
      </table>
       <a href="/">HOME</a>
    </div>
    

    <script src="./js/allUser.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>