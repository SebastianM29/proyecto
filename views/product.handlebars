           </div>
           {{!-- <option value={{this.id}}><p>carrito{{this.contador}}</p></option> --}}
         
         {{/if }}

       
        


       </div>
       
     {{#if respDB.isValid}}
          <div class="a1">
          {{#each respDB.docs}}
          <div class="prod">
          <div>
          <p class="items mt-2"><strong>Categoria: </strong>{{this.category}}</p>
          <p class="items"><strong>Titulo: </strong>{{this.title}}</p>
          <p class="items"><strong>Descripcion: </strong>{{this.description}}</p>
          <p class="items"><strong>Precio: </strong>{{this.price}}</p>
          <p class="items"><strong>Codigo: </strong>{{this.code}}</p>
          <p class="items" id="1{{this._id}}"><strong>Stock: </strong>{{this.stock}}</p>
          </div>
          <div>
           <button id={{this._id}} class="btn btn-warning mb-5" onclick="agregarAlCarrito(this.id)">agregar al carrito</button>
          </div>
          </div>
          {{/each}}
          </div>
          
          <div>
            {{#if  respDB.hasPrevPage}}
            <a href={{this.respDB.prevLink}}>pagina anterior</a>
            {{/if}}
            <div class="numero">{{this.respDB.page}}</div>
            {{#if  respDB.hasNextPage}}
            <a href={{this.respDB.nextLink}}>pagina siguiente</a>
            {{/if}}

          </div>

     {{/if}}

       

