<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   
    <title>Document</title>
</head>
<body>
     


    <div class="field">
       
       
       <div class="a2">
        <select id="carrito-select" class="form-select">
         <option value=""disabled selected>Seleccione un carrito</option>
         {{#if cartsId}}
          {{#each cartsId}}
           <option value={{this.id}}><p>carrito{{this.contador}}</p></option>
          {{/each}}
         {{/if }}

        </select>

        <a href="/cart">carritos</a>


       </div>
       
     {{#if respDB.isValid}}
          <div class="a1">
          {{#each respDB.docs}}
          <div class="prod">
          <div>
          <p class="items">{{this.title}}</p>
          <p class="items">{{this.description}}</p>
          <p class="items">{{this.code}}</p>
          <p class="items">{{this.price}}</p>
          <p class="items">{{this.category}}</p>
          </div>
          <div>
           <button id={{this._id}} class="btn btn-warning" onclick="agregarAlCarrito(this.id)">agregar al carrito</button>
          </div>
          </div>
          {{/each}}
          </div>
          
          <div>
            {{#if  respDB.hasPrevPage}}
            <a href={{this.respDB.prevLink}}>pagina anterior</a>
            {{/if}}
            <div class="numero">{{this.respDB.page}}</div>
            {{#if  respDB.hasNextPage}}
            <a href={{this.respDB.nextLink}}>pagina siguiente</a>
            {{/if}}

          </div>

     {{/if}}

       

    </div>
  

  
    

</body>
</html>